<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20"
      styleClass="person-card">

  <VBox alignment="CENTER_LEFT" minHeight="105" HBox.hgrow="ALWAYS">
    <padding>
      <Insets top="5" right="5" bottom="5" left="15" />
    </padding>

    <HBox spacing="5" alignment="CENTER_LEFT">
      <Label fx:id="id" styleClass="cell_big_label" />
      <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
    </HBox>

    <FlowPane fx:id="tags" hgap="5" vgap="5" />
    <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
    <Label fx:id="address" styleClass="cell_small_label" text="\$address" />

    <!-- CARETAKER SECTION -->
    <VBox fx:id="caretakerBox"
          spacing="0"
          alignment="TOP_LEFT"
          visible="false"
          managed="false"
          style="-fx-padding: 10 0 0 0;">
      <Label text="Caretaker" styleClass="section_header"/>
      <Label fx:id="caretakerName" styleClass="cell_small_label" />
      <Label fx:id="caretakerPhone" styleClass="cell_small_label" />
      <Label fx:id="caretakerAddress" styleClass="cell_small_label" />
      <Label fx:id="caretakerRelationship" styleClass="cell_small_label" />
    </VBox>
  </VBox>


  <!-- RIGHT COLUMN: Notes and Appointments side-by-side -->
  <HBox fx:id="rightContainer"
        spacing="20"
        alignment="TOP_LEFT"
        style="-fx-padding: 10; -fx-min-width: 400;">

    <!-- NOTES COLUMN -->
    <VBox fx:id="notesBox"
          spacing="5"
          alignment="TOP_LEFT"
          prefWidth="200"
          minWidth="200"
          maxWidth="200"
          HBox.hgrow="NEVER">
      <Label text="Notes" styleClass="section_header"/>
      <VBox fx:id="notesContainer" spacing="3"/>
    </VBox>

    <!-- APPOINTMENT COLUMN -->
    <VBox fx:id="appointmentBox"
          spacing="5"
          alignment="TOP_LEFT"
          prefWidth="200"
          minWidth="200"
          maxWidth="200"
          HBox.hgrow="NEVER">
      <Label text="Appointments" styleClass="section_header"/>
      <VBox fx:id="appointmentContainer" spacing="3" />
    </VBox>

  </HBox>

</HBox>
